@model Web.ViewModels.Authors.AddAuthorVM

<h1>Add New Author</h1>

@if (TempData["Error"] != null)
{
    <p class="text-danger">@TempData["Error"]</p>
}

@if (TempData["Success"] != null)
{
    <p class="text-success">@TempData["Success"]</p>
}

<form asp-action="AddAuthor" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" class="form-control" required />
        <label for="name">Bio</label>
        <input type="text" id="bio" name="bio" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <div class="mt-3">
        <a asp-controller="Author" asp-action="Index" class="btn btn-primary">
            Back
        </a>
    </div>
</form>
