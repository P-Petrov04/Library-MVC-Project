@model Web.ViewModels.Authors.AuthorVM

<h1>Authors</h1>

<div class="mt-3">
    <a asp-controller="Author" asp-action="AddAuthor" class="btn btn-primary">
        Add New Author
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Items)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.Bio</td>
                <td>
                    <form asp-action="DeleteAuthor" asp-controller="Author" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@author.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <form asp-action="EditAuthor" asp-controller="Author" method="get" class="d-inline">
                        <input type="hidden" name="id" value="@author.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">
        Back
    </a>
</div>
