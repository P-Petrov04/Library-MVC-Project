@model Web.ViewModels.Auth.LoginVM

<h2 class="text-center mt-5">Login</h2>

@if (TempData["Error"] != null)
{
    <p class="text-danger text-center">@TempData["Error"]</p>
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth/login.css" asp-append-version="true" />
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="login-card p-4">
        <h3 class="text-center mb-4">Welcome Back!</h3>
        <p class="text-center text-muted mb-4">Access your account and dive into the world of books.</p>
        <form action="/Auth/Login" method="post">
            <input type="hidden" name="Url" value="@ViewData["url"]" />

            <div class="form-group mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter your email" required />
            </div>

            <div class="form-group mb-4">
                <label for="Password" class="form-label">Password</label>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>
