@model dynamic

@{
    ViewData["Title"] = Model.Title;
}

<div class="text-center">
    <h1 class="display-4">@Model.Title</h1>
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.CoverImagePath))
            {
                <img src="~/images/@Model.CoverImagePath" class="img-fluid" alt="Book Cover" />
            }
            else
            {
                <img src="~/images/default.png" class="img-fluid" alt="Default Cover" />
            }
        </div>
        <div class="col-md-6">
            <h5>Book ID:</h5>
            <p>@Model.Id</p>
            <h5>Authors:</h5>
            <p>@string.Join(", ", Model.Authors)</p>
            <h5>Publisher:</h5>
            <p>@Model.Publisher</p>
            <h5>Tags:</h5>
            <p>@string.Join(", ", Model.Tags)</p>
            <h5>Categories:</h5>
            <p>@string.Join(", ", Model.Categories)</p>
        </div>
    </div>
</div>
