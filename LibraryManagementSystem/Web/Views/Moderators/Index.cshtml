@{
    ViewData["Title"] = "Moderator Dashboard";
}

<h2>Moderator Dashboard</h2>

@if (TempData["Success"] != null)
{
        <p class="text-success">@TempData["Success"]</p>
}

<a asp-controller="Moderator" asp-action="AddBook" class="btn btn-primary">Add Book</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Example data -->
        <tr>
            <td>Book Title</td>
            <td>Book Author</td>
            <td>123456789</td>
            <td>
                <a asp-controller="Moderator" asp-action="EditBook" class="btn btn-warning">Edit</a>
                <a asp-controller="Moderator" asp-action="DeleteBook" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    </tbody>
</table>
